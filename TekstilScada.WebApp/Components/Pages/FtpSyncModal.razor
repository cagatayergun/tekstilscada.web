@using TekstilScada.Models
@using TekstilScada.WebApp.Services
@inject ScadaDataService ScadaDataService

<div class="modal fade show" style="display:block" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">FTP Senkronizasyon (@Machine.MachineName)</h5>
                <button type="button" class="btn-close" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                @if (isLoading)
                {
                    <p><em>HMI reçeteleri okunuyor...</em></p>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-5">
                            <h6>SCADA Reçeteleri</h6>
                            <ul class="list-group">
                                @foreach (var recipe in LocalRecipes)
                                {
                                    <li class="list-group-item">@recipe.RecipeName</li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-2 text-center align-self-center">
                            <button class="btn btn-primary mb-2 w-100" disabled> &gt;&gt; Gönder</button>
                            <button class="btn btn-primary w-100" disabled> &lt;&lt; Al</button>
                        </div>
                        <div class="col-md-5">
                            <h6>HMI Reçeteleri</h6>
                            @if (hmiRecipes == null || hmiRecipes.Any(r => r.StartsWith("Hata:")))
                            {
                                <div class="alert alert-danger">@hmiRecipes?.FirstOrDefault() ?? "HMI reçeteleri okunamadı."</div>
                            }
                            else
                            {
                                <ul class="list-group">
                                    @foreach (var file in hmiRecipes)
                                    {
                                        <li class="list-group-item">@file</li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show"></div>

@code {
    [Parameter] public Machine Machine { get; set; }
    [Parameter] public List<ScadaRecipe> LocalRecipes { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private List<string>? hmiRecipes;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        hmiRecipes = await ScadaDataService.GetHmiRecipesAsync(Machine.Id);
        isLoading = false;
    }

    private async Task Close() => await OnClose.InvokeAsync();
}