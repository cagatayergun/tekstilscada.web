@using TekstilScada.Models

<div class="editor-group">
    <h6>Su Alma Parametreleri</h6>
    <div class="mb-2">
        <label class="form-label">Miktar (Litre):</label>
        <InputNumber class="form-control" @bind-Value="suAlmaParams.MiktarLitre" @oninput="NotifyParent" />
    </div>
    <div class="form-check">
        <InputCheckbox @bind-Value="suAlmaParams.SicakSu" @oninput="NotifyParent" />
        <label class="form-check-label">Sıcak Su</label>
    </div>
</div>

@code {
    [Parameter]
    public ScadaRecipeStep Step { get; set; }

    [Parameter]
    public EventCallback OnChanged { get; set; }

    private SuAlmaParams suAlmaParams;

    protected override void OnInitialized()
    {
        suAlmaParams = new SuAlmaParams(Step.StepDataWords);
    }

    private void NotifyParent() => OnChanged.InvokeAsync();
}