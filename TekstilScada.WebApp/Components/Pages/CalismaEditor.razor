@using TekstilScada.Models
<div class="editor-group">
    <h6>Çalışma Parametreleri</h6>
    <div class="mb-2"><label class="form-label">Çalışma Süresi (DK):</label><InputNumber class="form-control" @bind-Value="calismaParams.CalismaSuresi" @oninput="NotifyParent" /></div>
    <div class="mb-2"><label class="form-label">Çalışma Devri:</label><InputNumber class="form-control" @bind-Value="calismaParams.CalismaDevri" @oninput="NotifyParent" /></div>
</div>
@code {
    [Parameter] public ScadaRecipeStep Step { get; set; }
    [Parameter] public EventCallback OnChanged { get; set; }
    private CalismaParams calismaParams;
    protected override void OnInitialized() => calismaParams = new CalismaParams(Step.StepDataWords);
    private void NotifyParent() => OnChanged.InvokeAsync();
}