@using TekstilScada.Models
<div class="editor-group">
    <h6>Dozaj Parametreleri</h6>
    <div class="mb-2"><label class="form-label">Dozaj Süresi:</label><InputNumber class="form-control" @bind-Value="dozajParams.DozajSure" @oninput="NotifyParent" /></div>
    <div class="mb-2"><label class="form-label">Dozaj Litre:</label><InputNumber class="form-control" @bind-Value="dozajParams.DozajLitre" @oninput="NotifyParent" /></div>
</div>
@code {
    [Parameter] public ScadaRecipeStep Step { get; set; }
    [Parameter] public EventCallback OnChanged { get; set; }
    private DozajParams dozajParams;
    protected override void OnInitialized() => dozajParams = new DozajParams(Step.StepDataWords);
    private void NotifyParent() => OnChanged.InvokeAsync();
}