@using TekstilScada.Models

<div class="editor-group">
    <h6>Isıtma Parametreleri</h6>
    <div class="mb-2">
        <label class="form-label">Isı (°C):</label>
        <InputNumber class="form-control" @bind-Value="isitmaParams.Isi" @oninput="NotifyParent" />
    </div>
    <div class="mb-2">
        <label class="form-label">Süre (DK):</label>
        <InputNumber class="form-control" @bind-Value="isitmaParams.Sure" @oninput="NotifyParent" />
    </div>
</div>

@code {
    [Parameter]
    public ScadaRecipeStep Step { get; set; }

    [Parameter]
    public EventCallback OnChanged { get; set; }

    private IsitmaParams isitmaParams;

    protected override void OnInitialized()
    {
        isitmaParams = new IsitmaParams(Step.StepDataWords);
    }

    private void NotifyParent() => OnChanged.InvokeAsync();
}